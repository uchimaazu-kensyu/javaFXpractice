<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.Integer?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.javafxtest2.StoneGame">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

<!--    <Label fx:id="welcomeText"/>-->
    <Label fx:id="remainingStone" />
    <Label fx:id="stoneIllustrate" text="" />
    <Label fx:id="whoTurn" />
    <Label fx:id="guidText" text="取る石の数を指定してください！" />

    <ComboBox fx:id="degreeStoneComboBox" promptText="0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value ="1"></Integer>
                <Integer fx:value ="2"></Integer>
                <Integer fx:value ="3"></Integer>
            </FXCollections>
        </items>


    </ComboBox>
    <Button fx:id="okButton" onAction="#onHelloButtonClick" text="OK!" />

</VBox>
